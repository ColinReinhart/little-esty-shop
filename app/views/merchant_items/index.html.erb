<h1><%= "#{@merchant.name}" %></h1>

<h3>Top 5 Most Popular Items</h3>
<div id="favorite">
  
<% @merchant.top_5_items_by_day.each do |item| %>
  <%= "Top selling date for #{item.name} was #{item.invoice.created_at}." %>
<% end %>
</div>

<h3>Merchant's Items:</h3>
<ul>
<div id="disabled">
<h3>Disabled:</h3>
<% @merchant.items.each do |item| %>
    <div id="item-<%= item.id %>">
      <% if item.status == "disabled" %>
        <li><%= item.name %>
        <%= button_to "Enable", "/merchants/#{@merchant.id}/items", method: :patch, params: {status: "enabled", item_id: "#{item.id}"} %>
        </li>
      <% end %>
    </div>
<% end %>
</div>
</ul>
<ul>
<div id='enabled'>
<h3>Enabled:</h3>
<% @merchant.items.each do |item| %>
    <div id="item-<%= item.id %>">
      <% if item.status == "enabled" %>
        <li><%= item.name %>
        <%= button_to "Disable", "/merchants/#{@merchant.id}/items", method: :patch, params: {status: "disabled", item_id: "#{item.id}"} %>
        </li>
      <% end %>
    </div>
<% end %>
</div>
</ul>

<%= link_to "New Item", "/merchants/#{@merchant.id}/items/new" %>

  <h3>Best Selling Items</h3>
  <ol id="top_5_items">
  <% @merchant.top_5_items.each do |best_seller| %>
    <li><%= link_to "#{best_seller.name}", "/merchants/#{@merchant.id}/items/#{best_seller.id}" %> - Total Revenue: $<%= best_seller.total_revenue %></li>
  <% end %>
</ol>
