<h1>New Discount</h1>
<%= form_with url: merchant_bulk_discounts_path(@merchant), method: :post, local: true do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :percent_off %>
<%= f.text_field :percent_off %><br>
<%= f.label :threshold %>
<%= f.text_field :threshold %><br>
<%= f.submit "Submit" %>
<% end %>
